#!/usr/bin/env bash
set -oue pipefail

for func in /usr/lib/mat/*; do
    if [[ -f "$func" ]]; then
        source "$func"
    fi
done

PREFIX=""
CONTAINER_URL="ghcr.io/nostale3210/mat-test:latest"

if [[ "$@" == *"--init"* ]]; then PREFIX="${@: -1}"; fi


case "$1" in
    unused)
        get_unused_packages 
        ;;
    prune)
        prune_unused_packages
        ;;
    materialize)
        generate_deployment "$2"
        ;;
    relabel)
        relabel_deployment
        ;;
    gen_boot)
        booty_bits "$2"
        ;;
    label_boot)
        relabel_boot
        ;;
    pull)
        pull_image "$2"
        ;;
    update)
        update_store "$CONTAINER_URL" "$2"
        ;;
    itemize)
        populate_store
        create_custom_content_pkg
        ;;
    exch)
        swap_dep
        ;;
    clear)
        clear_staging
        ;;
    *)
        echo default
        ;;
esac

