#!/usr/bin/env bash
set -oue pipefail

swap_dep() {
    if [[ ! -d /.mat/staging ]]; then
        printf "No staging tree!\n"
        exit 1
    fi

    exch "$PREFIX/usr" "$PREFIX/.mat/staging/usr"
    exch "$PREFIX/etc" "$PREFIX/.mat/staging/etc"
}

clear_staging() {
    printf "Removing stale tree...\n"
    rm -rf "$PREFIX/.mat/staging"
}
